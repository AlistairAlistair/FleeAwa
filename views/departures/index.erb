<div class="wrapper">
  <section class="content">
    <div class="columns">
      <main class="main">

        <form method="get" action="/departures/new">
          <span class="heading_pop">Departures</span>
          <button class="button3">Add a new Departure</button>
        </form>

        <table>
          <tr>
            <th>Airport Name</th>

            <th>City</th>

            <th>Country</th>
          </tr>
          <% for departure in @departures %>
          <tr>
            <td><%= departure.departure_airport_name %></td>

            <td><%= departure.departure_city %></td>

            <td><%= departure.dep_country %></td>
            <td>
              <form method="get" action="/departures/<%= departure.id %>/edit">
                <button class="button2">Edit</button>
              </form>
            </td>
          </tr>
          <% end %>
        </table>

      </main>
      <aside class="sidebar-first"></aside>
      <aside class="sidebar-second"></aside>
    </div>
  </section>
</div>
