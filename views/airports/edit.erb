<div class="wrapper">
  <section class="content">
    <div class="columns">
      <main class="main">

<h2>Add a new Airport</h2>

<form method="post" action="/airports/<%= @airport.id %>">
  <input type="hidden" name="_method" value="put"/>
  <div class="field-group">
    <label for="airport-name-field" class="label">Airport Name:</label>
    <div class="field">
      <input
        type="text"
        name="airport_name"
        id="airport-name-field"
        value="<%= @airport.airport_name %>"
        required
      />
   </div>
  </div>

  <div class="field-group">
    <label for="city-field" class="label">City:</label>
    <div class="field">
      <input
        type="text"
        name="city"
        id="city-field"
        value="<%= @airport.city %>"
        required
      />
    </div>
  </div>


    <div class="field-group">
      <label for="country-field" class="label">Country:</label>
      <div class="field">
        <input
          type="text"
          name="country"
          id="country-field"
          value="<%= @airport.country %>"
          required
        />
      </div>
    </div>
<button class="big-button button">Update Airport</button>
</form>

</main>
<aside class="sidebar-first"></aside>
<aside class="sidebar-second"></aside>
</div>
</section>
</div>
